{
  "name": "adfs-test-pureclient",
  "version": "1.0.0",
  "description": "Pure clientside auth test",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand --verbose",
    "dev": "webpack -d --watch",
    "build": "webpack -p",
    "lint": "prettier --check app __tests__",
    "lint:fix": "prettier --write app __tests__"
  },
  "jest": {
    "moduleFileExtensions": [
      "jsx",
      "js",
      "tsx",
      "ts",
      "json"
    ],
    "verbose": true,
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.[jt]sx?$": "ts-jest",
      "node_modules/react-multistep/.+\\.js$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!react-multistep)"
    ],
    "testResultsProcessor": "jest-junit",
    "setupFiles": [
      "./jestSetup.jsx"
    ]
  },
  "author": "Andy Gallagher <andy.gallagher@theguardian.com>",
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "@types/sinon": "^9.0.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "expect": "^24.9.0",
    "husky": ">=4",
    "jest": "^26.0.1",
    "jest-cli": "^24.8.0",
    "jest-fetch-mock": "^3.0.1",
    "jest-junit": "^4.0.0",
    "lint-staged": ">=10",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.12.0",
    "sinon": "^2.3.7",
    "source-map-loader": "^1.0.0",
    "terser-webpack-plugin": "^1.4.3",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.26",
    "@fortawesome/free-brands-svg-icons": "^5.12.0",
    "@fortawesome/free-regular-svg-icons": "^5.12.0",
    "@fortawesome/free-solid-svg-icons": "^5.12.0",
    "@fortawesome/react-fontawesome": "^0.1.8",
    "@types/jest": "^26.0.0",
    "@types/react-router-dom": "^5.1.5",
    "cross-storage": "^1.0.0",
    "css-loader": "^2.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.20.1",
    "moment-duration-format": "2.2.2",
    "moment-timezone": "^0.5.29",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-tooltip": "^3.11.2",
    "style-loader": "^0.20.2",
    "typings-for-css-modules-loader": "^1.7.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  }
}
